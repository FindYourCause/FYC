
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Dauphin - Premium Responsive Bootstrap Admin Template - Register</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/favicon.png" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css' />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Styling -->
    <link rel="stylesheet" href="~/addons/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/addons/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/addons/fontawesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/addons/ionicons/css/ionicons.css" />
    <link rel="stylesheet" href="~/addons/noUiSlider/nouislider.min.css" />

    <link rel="stylesheet" href="~/styles/style.css" />
    <link rel="stylesheet" href="~/styles/theme-blue.css" class="theme" />

    <!-- End of Styling -->
</head>
<body>

    <!-- Main content-->
    <div class="content" id="login-page">
        <div class="container-fluid">
            <div class="panel register" id="login-panel">
                <div class="panel-heading">
                    <i class="fa fa-user vcentered"></i>
                    <div class="vcentered">
                        <h3> Register </h3>
                        <h5> Create an account:</h5>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="row">
                        <div class="form-wrapper col-sm-6">
                            <label for="Login">Name</label>
                            <div class="form-group">
                                <input type="email" class="form-control" id="Login" placeholder="">
                            </div>
                        </div>

                        <div class="form-wrapper col-sm-6">
                            <label for="Email">E-Mail</label>
                            <div class="form-group">
                                <input type="email" class="form-control" id="Email" placeholder="">
                            </div>
                        </div>

                        <div class="form-wrapper col-sm-12">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="Password">Password</label>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="Password" placeholder="">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="Password">Confirm password</label>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="Password" placeholder="">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-wrapper col-sm-12">
                            <label for="server">Select Category:</label>
                            <div class="form-group">
                                <select class="form-control" id="server">
                                    <option value="0">Please Select Category</option>
                                    <option value="1">Beneficiary</option>
                                    <option value="2">Donor</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="checkbox checkbox-login">
                                    <input type="checkbox">
                                    <span class="checkbox-placeholder"></span>
                                    I agree with <a href="#">terms and policy </a>
                                </label>
                            </div>
                        </div>
                    </form>

                    <a class="btn btn-lg btn-info btn-block" href="index.html">Login</a>
                    <a onclick="@("window.location.href='" + @Url.Action("Login", "Test") + "'");" class="text-center btn-block no-margin-bottom" class="login-add-text"> Already have an account? </a>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Main content-->

    <div class="scripts">

        <!-- Addons -->
        <script src="~/addons/jquery/jquery.min.js"></script>
        <script src="~/addons/jquery-ui/jquery-ui.min.js"></script>
        <script src="~/addons/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/addons/toastr/toastr.min.js"></script>

        <!-- Dauphin scripts -->
        <script src="addons/dauphin.js"></script>

    </div>

</body>

</html>